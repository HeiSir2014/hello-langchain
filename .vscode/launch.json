    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Auto-Compact (Small Context)",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect-brk=127.0.0.1:9229", "run", "src/cli.tsx"],
