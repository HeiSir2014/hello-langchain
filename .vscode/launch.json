{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug YTerm CLI (No Break)",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect=127.0.0.1:9229", "run", "src/cli.tsx"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "timeout": 30000,
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/src/**/*.tsx", "${workspaceFolder}/src/**/*.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug YTerm CLI",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect-brk=127.0.0.1:9229", "run", "src/cli.tsx"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "timeout": 30000,
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/src/**/*.tsx", "${workspaceFolder}/src/**/*.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with Arguments",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect-brk=127.0.0.1:9229", "run", "src/cli.tsx"],
