      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "timeout": 30000,
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/src/**/*.tsx", "${workspaceFolder}/src/**/*.ts"]
    },
    {
