    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Bun Process",
      "port": 6499,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
